<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springhelloworld.mappers.UsersMapper">
    <resultMap id="userMap" type="com.example.springhelloworld.stucts.User">
        <id column="id" property="id"/>
        <result column="first_name" property="firstName"/>
        <result column="last_name" property="lastName"/>
        <result column="age" property="age"/>
    </resultMap>
    <select id="getAllUsers" resultMap="userMap">
        select id, first_name, last_name, age from users;
    </select>
    <select id="getUserById" resultMap="userMap">
        select id, first_name, last_name, age from users where id = #{id, jdbcType = INTEGER};
        --insert
    </select>
</mapper>